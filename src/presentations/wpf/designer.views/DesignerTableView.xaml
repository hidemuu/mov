<UserControl
    x:Class="Mov.Designer.Views.DesignerTableView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:Mov.Designer.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:vm="clr-namespace:Mov.Designer.ViewModels;assembly=Mov.Designer.ViewModels"
    d:DataContext="{d:DesignInstance vm:DesignerTableViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    prism:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Mov.WpfDesigns;component/Styles/BaseStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedCommand}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Grid>
        <ListView
            x:Name="listView"
            Grid.Row="0"
            ItemsSource="{Binding Models}">
            <ListView.View>
                <GridView>
                    <GridViewColumn
                        Width="{Binding Attribute.Id.Width}"
                        DisplayMemberBinding="{Binding Id.Value}"
                        Header="{Binding Attribute.Id.Header}" />
                    <GridViewColumn
                        Width="{Binding Attribute.Code.Width}"
                        DisplayMemberBinding="{Binding Code.Value}"
                        Header="{Binding Attribute.Code.Header}" />
                    <GridViewColumn
                        Width="{Binding Attribute.Name.Width}"
                        DisplayMemberBinding="{Binding Name.Value}"
                        Header="{Binding Attribute.Name.Header}" />
                    <GridViewColumn
                        Width="{Binding Attribute.Command.Width}"
                        DisplayMemberBinding="{Binding Command.Value}"
                        Header="{Binding Attribute.Command.Header}" />
                    <GridViewColumn
                        Width="{Binding Attribute.ControlType.Width}"
                        DisplayMemberBinding="{Binding ControlType.Value}"
                        Header="{Binding Attribute.ControlType.Header}" />
                    <GridViewColumn
                        Width="{Binding Attribute.ControlStyle.Width}"
                        DisplayMemberBinding="{Binding ControlStyle.Value}"
                        Header="{Binding Attribute.ControlStyle.Header}" />
                    <GridViewColumn
                        Width="{Binding Attribute.Parameter.Width}"
                        DisplayMemberBinding="{Binding Parameter.Value}"
                        Header="{Binding Attribute.Parameter.Header}" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</UserControl>

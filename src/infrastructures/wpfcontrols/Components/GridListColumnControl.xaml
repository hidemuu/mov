<UserControl
    x:Class="Mov.WpfControls.Components.GridListColumnControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Mov.WpfControls.Components"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <GridViewColumn Width="{Binding Attribute.Width.Value, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local:GridListColumnControl}}" Header="{Binding Attribute.Header.Value, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local:GridListColumnControl}}">
        <GridViewColumn.CellTemplate>
            <DataTemplate>
                <TextBlock HorizontalAlignment="Stretch" Text="{Binding Item.Value.Value, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local:GridListColumnControl}}" />
            </DataTemplate>
        </GridViewColumn.CellTemplate>
    </GridViewColumn>
</UserControl>

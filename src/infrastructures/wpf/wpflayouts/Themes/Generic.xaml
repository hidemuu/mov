<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:atom="clr-namespace:Mov.WpfLayouts.Components.Atoms">

    <Style TargetType="{x:Type atom:LayButton}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate>
                    <DockPanel>
                        <Button
                            Width="{Binding LayoutContent.Width, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type atom:LayButton}}}"
                            Height="{Binding LayoutContent.Height, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type atom:LayButton}}}"
                            HorizontalAlignment="{Binding LayoutContent.HorizontalAlignment, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type atom:LayButton}}}"
                            VerticalAlignment="{Binding LayoutContent.VerticalAlignment, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type atom:LayButton}}}"
                            Content="{Binding LayoutContent.Name, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type atom:LayButton}}}" />
                    </DockPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
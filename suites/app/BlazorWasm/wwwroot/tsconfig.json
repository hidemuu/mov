{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "moduleResolution": "node", // モジュール解決の方法を指定
    "strict": true,
    "outDir": "./dist/js",
    "sourceMap": true,
    "baseUrl": "./",
    "paths": {
      "@babylonjs/*": [ "node_modules/@babylonjs/*" ] // パスのエイリアスを設定
    }
  },
  "include": [ "./src/**/*.ts" ],
  "exclude": [ "node_modules" ]
}

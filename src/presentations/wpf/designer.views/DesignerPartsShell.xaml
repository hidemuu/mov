<UserControl
    x:Class="Mov.Designer.Views.DesignerPartsShell"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Mov.Designer.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <DockPanel LastChildFill="True">
        <local:DesignerPartsControl DockPanel.Dock="Top" Models="{Binding TopModels, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local:DesignerPartsShell}}" />
        <local:DesignerPartsControl DockPanel.Dock="Bottom" Models="{Binding BottomModels, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local:DesignerPartsShell}}" />
        <local:DesignerPartsControl DockPanel.Dock="Left" Models="{Binding LeftModels, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local:DesignerPartsShell}}" />
        <local:DesignerPartsControl DockPanel.Dock="Right" Models="{Binding RightModels, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local:DesignerPartsShell}}" />
        <local:DesignerPartsControl Models="{Binding Models, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local:DesignerPartsShell}}" />
    </DockPanel>
</UserControl>

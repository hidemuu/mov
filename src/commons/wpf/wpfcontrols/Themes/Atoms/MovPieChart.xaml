<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:atom="clr-namespace:Mov.WpfControls.Components.Atoms"
                    xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="{x:Type atom:MovPieChart}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type atom:MovPieChart}">
                    <lvc:PieChart
                        Series="{TemplateBinding Series}"
                        SeriesColors="{TemplateBinding SeriesColors}"
                        StartingRotationAngle="0" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
<UserControl
    x:Class="Mov.Authorizer.Views.AuthorizerView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Mov.Authorizer.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:Mov.Authorizer.ViewModels;assembly=Mov.Authorizer.ViewModels"
    d:DataContext="{d:DesignInstance vm:AuthorizerViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <TextBlock
            Grid.Row="0"
            Margin="20,0,20,0"
            VerticalAlignment="Center"
            FontSize="25"
            FontWeight="Bold"
            Foreground="#3F487F"
            Text="Authorizer" />
        <StackPanel
            Grid.Row="1"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Orientation="Horizontal" />
    </Grid>
</UserControl>

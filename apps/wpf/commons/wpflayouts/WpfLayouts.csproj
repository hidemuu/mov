<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net7.0-windows</TargetFramework>
    <UseWPF>true</UseWPF>
    <AssemblyName>Mov.WpfLayouts</AssemblyName>
    <RootNamespace>Mov.WpfLayouts</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <Folder Include="Themes\Molecules\" />
    <Folder Include="Themes\Organisms\" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\wpfcontrols\WpfControls.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="Mov.Layouts">
      <HintPath>..\..\..\..\commons\Core\bin\Debug\netstandard2.0\Mov.Layouts.dll</HintPath>
    </Reference>
    <Reference Include="Mov.Localizers">
      <HintPath>..\..\..\..\commons\Core\bin\Debug\netstandard2.0\Mov.Localizers.dll</HintPath>
    </Reference>
    <Reference Include="Mov.Utilities">
      <HintPath>..\..\..\..\commons\Core\bin\Debug\netstandard2.0\Mov.Utilities.dll</HintPath>
    </Reference>
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Controls\LayoutPartsShell.xaml.cs">
      <SubType>Code</SubType>
    </Compile>
    <Compile Update="Controls\LayoutPartsControl.xaml.cs">
      <SubType>Code</SubType>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <Page Update="Controls\LayoutPartsShell.xaml">
      <XamlRuntime>$(DefaultXamlRuntime)</XamlRuntime>
      <SubType>Designer</SubType>
    </Page>
    <Page Update="Controls\LayoutPartsControl.xaml">
      <XamlRuntime>$(DefaultXamlRuntime)</XamlRuntime>
      <SubType>Designer</SubType>
    </Page>
    <Page Update="Templates\LayoutNodeTemplate.xaml">
      <XamlRuntime>$(DefaultXamlRuntime)</XamlRuntime>
      <SubType>Designer</SubType>
    </Page>
    <Page Update="Themes\Generic.xaml">
      <XamlRuntime>$(DefaultXamlRuntime)</XamlRuntime>
      <SubType>Designer</SubType>
    </Page>
  </ItemGroup>

</Project>

<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net7.0</TargetFramework>

    <IsPackable>false</IsPackable>

    <AssemblyName>Mov.$(MSBuildProjectName)</AssemblyName>

    <RootNamespace>Mov.$(MSBuildProjectName.Replace(" ", "_"))</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="resources\landmark.json" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="resources\landmark.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="ChainingAssertion-NUnit" Version="1.7.1" />
    <PackageReference Include="Microsoft.NET.Test.Sdk" Version="16.9.4" />
    <PackageReference Include="Moq" Version="4.18.2" />
    <PackageReference Include="NUnit" Version="3.13.1" />
    <PackageReference Include="NUnit3TestAdapter" Version="3.17.0" />
    <PackageReference Include="coverlet.collector" Version="3.0.2" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\framework\Framework.csproj" />
    <ProjectReference Include="..\game.controller\Game.Controller.csproj" />
    <ProjectReference Include="..\game.repository\Game.Repository.csproj" />
    <ProjectReference Include="..\game.service\Game.Service.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="Mov.Core">
      <HintPath>..\..\..\..\cores\lib\bin\Debug\netstandard2.0\Mov.Core.dll</HintPath>
    </Reference>
    <Reference Include="Mov.Core.Accessors">
      <HintPath>..\..\..\..\cores\lib\bin\Debug\netstandard2.0\Mov.Core.Accessors.dll</HintPath>
    </Reference>
    <Reference Include="Mov.Core.Repositories">
      <HintPath>..\game.controller\bin\Debug\netstandard2.0\Mov.Core.Repositories.dll</HintPath>
    </Reference>
  </ItemGroup>

</Project>

@page "/"
@inherits LayoutComponentBase
@inject NavigationManager NavigationManager
@inject IJSRuntime JSRuntime

<h1>Welcome to TripPlanner</h1>

<p>Plan your trip with ease. Start with a sample itinerary:</p>

<h3>Map Display</h3>

<MapComponent />

<button @onclick="NavigateToItinerary">View Itinerary</button>

@code {
    private void NavigateToItinerary()
    {
        NavigationManager.NavigateTo("/itinerary");
    }



    private async Task UpdateMap(double latitude, double longitude, int zoom)
    {
        await JSRuntime.InvokeVoidAsync("updateMap", latitude, longitude, zoom);
    }

}